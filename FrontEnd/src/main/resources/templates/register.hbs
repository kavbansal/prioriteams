{{#partial "content"}}
    <h1>Register for Event</h1>
    <ul>
    {{#each eventList}}
        <li> {{ id }}. {{ eventName }} at {{location}} for {{duration}} minutes  </li>
    {{/each}}
    </ul>

    <h3 style='margin:50px 0 30px'>Previously Entered Availabilities</h3>

<ul style='margin:0 0 50px'>
    {{#each AvailList}}
        <li>  Person {{ personId }} can attend Event {{ eventId }} from {{ startTime }} to {{ endTime }} on day {{ dow }}  of the week.  </li>
    {{/each}}
</ul>


<form action="/register" method="post">

    <p> <a> Select Event </a> <select id="eId" name ="eId">
        <option disabled selected value></option>
            {{#each eventList}}
                <option value = {{id}}> {{ eventName }} </option>
            {{/each}}
    </select>
    </p>
    <p> <a> Select Person </a> <select id="pId" name ="pId">
        <option disabled selected value></option>
            {{#each personList}}
                <option value = {{id}}> {{ name }} </option>
            {{/each}}
    </select>
    </p>
   <p> <a> Select available day </a> <select id="dow" name ="dow">
        <option disabled selected value></option>
        <option value=1>Monday</option>
        <option value=2>Tuesday</option>
        <option value=3>Wednesday</option>
        <option value=4>Thursday</option>
        <option value=5>Friday</option>
        <option value=6>Saturday</option>
        <option value=7>Sunday</option>
    </select>
   </p>
    <p>
        <a> Start time </a> <select id="st" name = "st">
        <option disabled selected value></option>
        <option value=8>8 AM</option>
        <option value=9>9 AM</option>
        <option value=10>10 AM</option>
        <option value=11>11 AM</option>
        <option value=12>12 PM</option>
        <option value=13>1 PM</option>
        <option value=14>2 PM</option>
        <option value=15>3 PM</option>
        <option value=16>4 PM</option>
        <option value=17>5 PM</option>
        <option value=18>6 PM</option>
        <option value=19>7 PM</option>
        <option value=20>8 PM</option>

    </select>
        <br>
        <br>
        <a> End time </a> <select id="et" name = "et">
        <option disabled selected value></option>
        <option value=8>8 AM</option>
        <option value=9>9 AM</option>
        <option value=10>10 AM</option>
        <option value=11>11 AM</option>
        <option value=12>12 PM</option>
        <option value=13>1 PM</option>
        <option value=14>2 PM</option>
        <option value=15>3 PM</option>
        <option value=16>4 PM</option>
        <option value=17>5 PM</option>
        <option value=18>6 PM</option>
        <option value=19>7 PM</option>
        <option value=20>8 PM</option>

    </select>
    </p>
    <br>
    <button>Submit</button>
</form>
<br>
    <p><a href="/events">View Events</a></p>
    <p><a href="/register"> Register for an Event</a></p>
    <p><a href="/">Home</a></p>
{{/partial}}
