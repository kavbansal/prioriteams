<h1 class="headedit">PrioriTeams</h1>
<a href="/signout" class="signoutbutton" aria-pressed="true">Sign out</a>
<nav id="nav-1">
    <a class="link-1" href="/main">Home</a>
    <a class="link-1" href="/create">Create Event</a>
    <a class="link-1" href="/adjustPriorities">Adjust Priorities</a>
    <a class="link-1" href="/events/{{personid}}">View Events</a>
</nav>
{{#partial "content"}}
    <br>
    <h1>Change Priorities</h1>
    <br>
    <form action="/adjustPriorities" method="post">

        <p> <a> Select Who to Change Priority for </a> <select id="pId" name ="pId">
            <option disabled selected value></option>
                {{#each People}}
                    <option value = {{id}}> {{ name }} </option>
                {{/each}}
        </select>
        </p>
        <p>  Priority <input type="number" placeholder="Priority" name="priority">
        <p> Note: Priority must be between 1 (highest) and 3 (lowest)</p>

        <br>
        <button>Submit</button>
    </form>
    <br>
    <h2>List of People</h2>
    <ul style="font-size: 18px">
        {{#each People}}
            <li>  {{ name }} ({{email}}): Priority {{priority}} </li>
        {{/each}}
    </ul>
{{/partial}}
{{> base.hbs }}