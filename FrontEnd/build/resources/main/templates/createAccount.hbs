{{#partial "title"}}
    <h1 class="headedit">Welcome to PrioriTeams!</h1>
{{/partial}}

{{#partial "content"}}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign In</title>
    <link rel="stylesheet" href="login_page.css">
</head>
<body>

    <div class="login_page">
      <div class="form">
          <form class="login-form" action="/createaccount" method="post">
              <input id = "personName" name = "personName" type="text" placeholder="Name"/>
              <input id = "personEmail" name = "personEmail" type="text" placeholder="E-Mail Address"/>
              <input id = "personUsername" name = "personUsername" type="text" placeholder="Username"/>
              <input id = "personPassword" name = "personPassword" type="password" placeholder="Password"/>
              <div class="container">
                  <h2>I am a:</h2>
                  <ul class = "styled">
                      <li>
                          <input type="radio" id="highest" name="priority" value="1">
                          <label for="highest">Highest Priority User (Ex: Professor)</label>
                          <div class="check"></div>
                      </li>
                      <li>
                          <input type="radio" id="high" name="priority" value="2">
                          <label for="high">High Priority User (Ex: Head CA)</label>

                          <div class="check"><div class="inside"></div></div>
                      </li>
                      <li>
                          <input type="radio" id="standard" name="priority" value="3">
                          <label for="standard">Standard Priority User (Ex: CA)</label>
                          <div class="check"><div class="inside"></div></div>
                      </li>
                  </ul>
              </div>
              <br>
              <button type = "submit">create account</button>
              <p class="message">Already registered? <a href="/">Sign In</a></p>
          </form>
      </div>
    </div>
</body>
</html>

{{/partial}}

{{> base.hbs }}